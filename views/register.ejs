<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head') %>
	<body>
		<div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-smile"></i> RegisterForm</h1>
			</header>
			<main class="join-main">
				<form action="/register" method="POST">
					<div class="form-control">
						<label for="login">Login</label>
						<input
							type="text"
							name="login"
							class="login"
							placeholder="Enter login..."
							required
						/>
					</div>
					<div class="form-control">
						<label for="room">Password</label>
						<input
							type="password"
							name="password"
							class="password"
							placeholder="Enter password..."
							required
						/>
					</div>
					<button type="submit" class="registerBtn btn">Create new user</button>
					<div style="text-align: center; margin-top: 15px;">Or <a href="login" style="color: #fff; text-decoration: underline;">login</a> into existing</div>
				</form>
			</main>
		</div>
	</body>
	<script src="/js/register/register.js"></script>
</html>
