<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head') %>
	<body>
		<div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-smile"></i> LoginForm</h1>
			</header>
			<main class="join-main">
				<form action="/login" method="POST">
					<div class="form-control">
						<label for="login">Login</label>
						<input
							type="text"
							name="login"
							class="login"
							placeholder="Enter login..."
							required
						/>
					</div>
					<div class="form-control">
						<label for="room">Password</label>
						<input
							type="password"
							name="password"
							class="password"
							placeholder="Enter password..."
							required
						/>
					</div>
					<button type="submit" class="btn">Login</button>
					<div style="text-align: center; margin-top: 15px;">Or <a href="register" style="color: #fff; text-decoration: underline;">create new account</a></div>
				</form>
			</main>
		</div>
	</body>
	<script type="module" src="/js/login/login.js"></script>
</html>
